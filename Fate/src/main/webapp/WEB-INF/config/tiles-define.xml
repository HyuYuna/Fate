<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="layout-tiles" template="/WEB-INF/jsp/layout/TilesLayout.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/layout/headerTemplate.jsp" />
		<put-attribute name="foot" value="/WEB-INF/jsp/layout/footerTemplate.jsp" />
	</definition> 
	
	<definition name="*.main" extends="layout-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp" />
	</definition>
	
	<definition name="*/*.main" extends="layout-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}.jsp" />
	</definition>
	
	<definition name="*/*/*.main" extends="layout-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp" />
	</definition>
</tiles-definitions>